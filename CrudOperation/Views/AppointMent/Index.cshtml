@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>AppointMent Date</th>
            <th>Reason</th>
            <th>DoctorName</th>
            <th>PatientName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var a in Model)
        {
            <tr>
                <td>@a.AppointmentDate</td>
                <td>@a.Reason</td>
                <td>@a.Doctor?.Name</td>
                <td>@a.Patient?.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@a.Id">Edit</a> |
                   
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@a.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

