@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success" href="@Url.Action("Create" , "Doctor")">Add New Doctor</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Phone</th>
            <th>Appointments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.Phone</td>
                <td>@doctor.Appointments?.Count()</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Doctor", new { id = doctor.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Doctor", new { id = doctor.Id })">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
